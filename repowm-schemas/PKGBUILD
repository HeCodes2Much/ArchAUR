# Maintainer: TheRepoClub <TheRepoClub@github.com>
# Contributor: TheRepoClub <TheRepoClub@github.com>
# shellcheck disable=all

pkgname=repowm-schemas
pkgver=2021.08.21
pkgrel=1
pkgdesc="schemas for instawm"
url="https://github.com/The-Repo-Club/$pkgname"
arch=('any')
groups=('therepoclub')
license=('GPL3')
provides=("repowm-schemas=$pkgver")
depends=('glib2' 'dconf')
makedepends=('gobject-introspection' 'git' 'meson')
source=("${pkgname}-$pkgver.tar.gz::${url}/archive/$pkgver.tar.gz")
sha256sums=('9e0072255c06e9db089fc9de8741aac08f4014636ea7bf202ac0b914b23972ec')

prepare() {
    cd "$srcdir/$pkgname-$pkgver"
}

build() {
    arch-meson $srcdir/$pkgname-$pkgver build
    ninja -C build
}

check() {
    meson test -C build
}

package() {
    mkdir -p $pkgdir/usr/bin
    cp -a $srcdir/$pkgname-$pkgver/$pkgname $pkgdir/usr/bin/$pkgname
    DESTDIR="$pkgdir" meson install -C build
}
