# shellcheck disable=all

pkgname=shellfetch
pkgver=2022.02.16
pkgrel=1
pkgdesc="Shell System Information Fetcher"
arch=('any')
groups=('therepoclub')
url="https://github.com/The-Repo-Club/$pkgname"
license=('MIT')
depends=('bash' 'xorg-xrandr')
makedepends=('git')
source=("${pkgname}-$pkgver.tar.gz::${url}/archive/$pkgver.tar.gz")
sha256sums=('ef6868e942e373fb9389660037040f06649f89503b205bc1d6c453bac156ab68')

package() {
    cd "$pkgname-$pkgver"
    make DESTDIR="$pkgdir" install
    install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE.md"
}
