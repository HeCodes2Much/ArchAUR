# Maintainer: The-Repo-Club <The-Repo-Club@github.com>
# Contributor: The-Repo-Club <The-Repo-Club@github.com>

pkgname=therepoclub-keyring
pkgver=2021.08.22
pkgrel=1
pkgdesc="TheRepoClub keyring"
arch=('any')
groups=('therepoclub')
url="https://github.com/ArchAUR/$pkgname"
license=('GPL3')
source=("${pkgname}-$pkgver::git+https://github.com/ArchAUR/$pkgname.git" "${pkgname}.install")
sha256sums=('SKIP' '3f623c5cca80c9d7e6d3aac675db6c5e8dab7e8ebafb3a18c49a1db26a8f1497')
install=${pkgname}.install

package() {
    cd "${pkgname}-$pkgver"
    local destdir=usr/share/pacman/keyrings

    install -Dm644 therepoclub.gpg $pkgdir/$destdir/therepoclub.gpg
}
