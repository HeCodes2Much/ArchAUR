# shellcheck disable=all

pkgname=therepoclub-keyring
pkgver=2021.10.22
pkgrel=1
pkgdesc="TheRepoClub keyring"
arch=('any')
groups=('therepoclub')
url="https://github.com/ArchAUR/$pkgname"
license=('GPL3')
source=("therepoclub.pgp" "${pkgname}.install")
sha256sums=('SKIP' 'SKIP')
install=${pkgname}.install

package() {
    local destdir=usr/share/pacman/keyrings

    install -Dm644 therepoclub.pgp $pkgdir/$destdir/therepoclub.pgp
}
